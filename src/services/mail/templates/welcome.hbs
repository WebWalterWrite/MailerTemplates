    <style type="text/css">

        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        html {
            display: flex;
            justify-content: center;
        }

        center {
            margin: 0 auto;
        }

        table {
            
            width: 700px;
            background-color: #272C33;
            border: solid 2px black;
        }

        .header {
            border-bottom: solid 1px #FFFFFF;
        }

        h1 {
            color: rgb(97, 218, 251);
            padding: 10px;
        }

        h2 {
            text-align: center;
        }

        h2,
        p {
            color: #FFFFFF;
        }

        p {
            text-align: justify;
            padding: 10px;
            line-height: 1.5;
            font-size:14px;
        }

        .link {
            display: flex;
            align-items: center;
            justify-content: center;
            margin: 10px 0 10px 0;
        }

        .link div {
            display: flex;
            align-items: center;
            justify-content: center;
            width: 60%;
            background-color: rgb(97, 218, 251);
            padding: 13px;
            border-bottom: solid 1px black;
        }

        .link a {
            text-decoration: none;
            color: black;
            font-weight: bold;
            margin-left: 5px;
        }

        ._linkform {
            text-align: center;
            padding: 13px;
            border-top: solid 1px white;
        }

        ._linkform a {
            color: white;
        }

        @media screen and (max-width: 480px){
            h1{
                font-size:48px !important;
                font-size:18vw;
            }
            p,a{
                font-size:8vw !important;
                font-size:24px !important;
            }
        }
    </style>

</head>

